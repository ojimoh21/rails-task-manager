  <div class=" headers d-flex justify-content-between">
    <h1><%=@task.title%></h2>
    <%= link_to "Edit this task", edit_task_path(@task), :class => "btn edit text-center"%>
  </div>

<p class="deets"><%= @task.details %></p>
<% if @task.completed %>
  <i class="fa fa-check-square-o"></i> This task is completed
<% else %>
  <i class="fa fa-square-o"></i> This task is not completed yet
<% end %>
<hr>
  <p class="m-3"><i class="fas fa-undo"></i> <%= link_to "Back to list", tasks_path %></p>
